{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",          // ‚Üê change from "commonjs"
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",  // important for ESM
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
